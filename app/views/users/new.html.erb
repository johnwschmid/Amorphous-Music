<div class="container-fluid" id="header">
	<img src="assets/logo_black.png" alt="Logo" id="logo">
	<div>
		<h5>A Site By:<h5>
		<h5>John W. Schmid</h5>
	</div>
	<div class="btn-group-vertical" id="homeButton">
		<a href="/" class="btn btn-danger">Home</a>
	</div>
</div>

<nav class="navbar navbar-inverse" id="navbar">
	<div class="container-fluid text-center">
		<ul class="nav navbar-nav">
			<li><a href="/articles/all">Articles</a></li>
			<li><a href="/articles/music">Music</a></li>
			<li><a href="/articles/artists">Artists</a></li>
			<li><a href="/articles/events">Events</a></li>
		</ul>
	</div>
</nav>

<div id="bodyContainer">
		<% if @user.errors.any? %>
			<div id="error_explanation">
				<div class="alert alert-danger">
					The form contains <%= pluralize(@user.errors.count, "error") %>.
				</div>
				<ul>
					<% @user.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
	<div class="row">
	<div id="signUp" class="col-md-4 col-md-offset-4">
		<h4>Sign Up</h4>
		<%= form_for (@user), url: signup_path, :html => {:class => "form-horizontal"} do |f| %>
			<br>
			<div class="form-group form-inline">
				<%= f.label :username, "Username:", class: "control-label col-md-2" %>
				<%= f.text_field :username, class: "form-control" %>
			</div>
			<div class="form-group form-inline">
				<%= f.label :email, "Email:", class: "control-label col-md-2" %>
				<%= f.email_field :email, class: "form-control" %>
			</div>
			<div class="form-group form-inline">
				<%= f.label :password, "Password:", class: "control-label col-md-2" %>
				<%= f.password_field :password, class: "form-control" %>
			</div>
			<div class="form-group form-inline">
				<%= f.label :password_confirmation, "Confirmation:", class: "control-label col-md-2" %>
				<%= f.password_field :password_confirmation, class: "form-control" %>
			</div>
			<%= f.submit "Create Account", class: "btn btn-primary" %>
		<% end %>
	</div>
	</div>
</div>